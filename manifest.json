{
  "manifest_version": 2,
  "name": "Gmail++",
  "version": "1.0",

  "description": "Improves gmail, currently by modifying the refresh button to also check external POP3 accounts.",

  "icons": {
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png"
  },

  "permissions": [
	  "cookies",
	  "webRequest",
	  "*://mail.google.com/"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
	  {
		"matches": ["*://mail.google.com/*"],
		"js": ["main.js"]
	  }
  ]
}

